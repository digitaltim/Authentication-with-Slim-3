{% extends 'templates/app.twig' %}

{% block content %}
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel panel-default">
				<div class="panel-heading">Sign Up</div>
				<div class="panel-body">
					<form action="{{ path_for('auth.signup') }}" method="post">
						<div class="form-group">
							<label for="email">Email</label>
							<input type="email" name="email" id="email" placeholder="you@domain.com" class="form-control">
						</div>
						<div class="form-group">
							<label for="name">Name</label>
							<input type="text" name="name" id="name" class="form-control">
						</div>
						<div class="form-group">
							<label for="paswword">Paswword</label>
							<input type="paswword" name="paswword" id="paswword" placeholder="you@domain.com" class="form-control">
						</div>
						<button type="submit" class="btn btn-default">Sign up</button>
					</form>			
				</div>
			</div>
		</div>
	</div>
{% endblock %}